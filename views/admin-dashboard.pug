extends layout.pug
block title
    title Admin

block title-header
    span Admin Dashboard

block append styles
    link(rel="stylesheet", href="/admin-dashboard.css")

block content
    form.email-form(
        method='POST',
        action='/admin',
        enctype='application/x-www-form-urlencoded',
        id='admin-form'
    )
        input.admin-form-input(
            type="text",
            name="password",
            placeholder="password",
            onfocus="this.placeholder=''"
            onblur="this.placeholder='password'"
        )
        textarea.admin-form-input(
            name='emails',
            form='admin-form',
            autocomplete='off',
            placeholder="Emails to add/remove",
            onfocus='this.placeholder=""',
            onblur='this.placeholder="Emails to add/remove"'
        )
        button.email-form-submit.admin-form-submit(
            type='submit', 
            name='action',
            value='add-emails'
        ) Add Emails
        button.email-form-submit.admin-form-submit(
            type='submit',
            name='action',
            value='remove-emails'
        ) Remove Emails
    if verifiedEmailList
        p.display-email-list Verified email list: #{verifiedEmailList}
    else
        p.display-email-list The verified email list was either empty or it could not be retrieved.
    if unverifiedEmailList
        p.display-email-list Unverified email list: #{unverifiedEmailList}
    else
        p.display-email-list The unverified email list was either empty or it could not be retrieved.